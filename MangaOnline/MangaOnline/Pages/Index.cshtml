@page
@model IndexModel
@{
    ViewData["Title"] = "Trang Chủ";
}

<link rel="stylesheet" href="~/css/Index.css">
<!-- home -->
<section class="home">
    <!-- home bg -->
    <div class="owl-carousel home__bg">
        <div class="item home__cover" data-bg="/lib/img/home/home__bg.jpg"></div>
        <div class="item home__cover" data-bg="/lib/img/home/home__bg2.jpg"></div>
        <div class="item home__cover" data-bg="/lib/img/home/home__bg3.jpg"></div>
        <div class="item home__cover" data-bg="/lib/img/home/home__bg4.jpg"></div>
    </div>
    <!-- end home bg -->
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="home__title"><b>TRUYỆN ĐỀ CỬ</b> THÁNG @DateTime.Now.Month</h1>

                <button class="home__nav home__nav--prev" type="button">
                    <i class="icon ion-ios-arrow-round-back"></i>
                </button>
                <button class="home__nav home__nav--next" type="button">
                    <i class="icon ion-ios-arrow-round-forward"></i>
                </button>
            </div>

            <div class="col-12">
                <div class="owl-carousel home__carousel">
                    @{
                        foreach (var manga in Model.TopMonthManga)
                        {
                            <div class="item">
                                <!-- card -->
                                <div class="card card--big">
                                    <div class="card__cover">
                                        <a class="tag-image">
                                            <samp>
                                                <small>Chương @manga.Chapteres.Count</small>
                                            </samp>
                                        </a>
                                        <img class="img-top-month" src="~/image/manga-image/@manga.Image" alt="">
                                        <a asp-page="/Public/DetailManga" asp-route-id="@manga.Id" class="card__play">
                                            <i class="icon ion-ios-play"></i>
                                        </a>
                                    </div>
                                    <div class="card__content">
                                        <h3 class="card__title">
                                            <a asp-page="/Public/DetailManga" asp-route-id="@manga.Id">@manga.Name</a>
                                        </h3>
                                        <span class="card__category">
                                            @foreach (var categoryManga in manga.CategoryMangas)
                                            {
                                                <a asp-page="/Public/CategoriesList" asp-route-cateName="@categoryManga.Category.Name">@categoryManga.Category.Name</a>
                                            }
                                        </span>
                                        <span class="card__rate">
                                            <i class="icon ion-ios-star"></i>@manga.Star
                                        </span>
                                        <span class="card__rate" style="margin-left: 5px;">
                                            <i class="icon ion-ios-eye"></i>
                                            @await Component.InvokeAsync("FormatNumber", manga.ViewCount)
                                        </span>
                                    </div>
                                </div>
                                <!-- end card -->
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end home -->
<!-- content -->
<section class="content">
    <div class="content__head">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- content title -->
                    <h2 class="content__title">TRUYỆN MỚI CẬP NHẬT</h2>
                    <!-- end content title -->

                    <!-- content tabs nav -->
                    <ul class="nav nav-tabs content__tabs" id="content__tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true">Toàn bộ</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2" aria-selected="false">đã hoàn thành</a>
                        </li>
                    </ul>
                    <!-- end content tabs nav -->

                    <!-- content mobile tabs nav -->
                    <div class="content__mobile-tabs" id="content__mobile-tabs">
                        <div class="content__mobile-tabs-btn dropdown-toggle" role="navigation" id="mobile-tabs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <input type="button" value="Toàn bộ">
                            <span></span>
                        </div>

                        <div class="content__mobile-tabs-menu dropdown-menu" aria-labelledby="mobile-tabs">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="1-tab" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true">Toàn bộ</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" id="2-tab" data-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2" aria-selected="false">đã hoàn thành</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- end content mobile tabs nav -->
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- content tabs -->
        <div class="tab-content" id="myTabContent">
            <!-- tab 1 toàn bộ-->
            <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="1-tab">
                <div class="row">
                    @{
                        foreach (var manga in Model.NewUpdateMangas)
                        {
                            <!-- card -->
                            <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                                <div class="card">
                                    <div class="card__cover">
                                        <a class="tag-image">
                                            <samp>
                                                <small>Chương @manga.Chapteres.Count</small>
                                            </samp>
                                        </a>
                                        <img class="img-top-month" src="~/image/manga-image/@manga.Image" alt="">
                                        <a asp-page="/Public/DetailManga" asp-route-id="@manga.Id" class="card__play">
                                            <i class="icon ion-ios-play"></i>
                                        </a>
                                    </div>
                                    <div class="card__content">
                                        <h3 class="card__title">
                                            <a asp-page="/Public/DetailManga" asp-route-id="@manga.Id">@manga.Name</a>
                                        </h3>
                                        <span class="card__category">
                                            @foreach (var categoryManga in manga.CategoryMangas)
                                            {
                                                <a asp-page="/Public/CategoriesList" asp-route-cateName="@categoryManga.Category.Name">@categoryManga.Category.Name</a>
                                            }
                                        </span>
                                        <span class="card__rate">
                                            <i class="icon ion-ios-star"></i>@manga.Star
                                        </span>
                                        <span class="card__rate" style="margin-left: 5px;">
                                            <i class="icon ion-ios-eye"></i>
                                            @await Component.InvokeAsync("FormatNumber", manga.ViewCount)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <!-- end card -->
                        }
                    }

                </div>
            </div>
            <!-- tab 2 Đã hoàn thành -->
            <div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="2-tab">
                <div class="row">
                    @{
                        foreach (var manga in Model.NewDoneMangas)
                        {
                            <!-- card -->
                            <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                                <div class="card">
                                    <div class="card__cover">
                                        <a class="tag-image">
                                            <samp>
                                                <small>Chương @manga.Chapteres.Count</small>
                                            </samp>
                                        </a>
                                        <img class="img-top-month" src="~/image/manga-image/@manga.Image" alt="">
                                        <a asp-page="/Public/DetailManga" asp-route-id="@manga.Id" class="card__play">
                                            <i class="icon ion-ios-play"></i>
                                        </a>
                                    </div>
                                    <div class="card__content">
                                        <h3 class="card__title">
                                            <a asp-page="/Public/DetailManga" asp-route-id="@manga.Id">@manga.Name</a>
                                        </h3>
                                        <span class="card__category">
                                            @foreach (var categoryManga in manga.CategoryMangas)
                                            {
                                                <a asp-page="/Public/CategoriesList" asp-route-cateName="@categoryManga.Category.Name">@categoryManga.Category.Name</a>
                                            }
                                        </span>
                                        <span class="card__rate">
                                            <i class="icon ion-ios-star"></i>@manga.Star
                                            <span class="card__rate" style="margin-left: 5px;">
                                                <i class="icon ion-ios-eye"></i>
                                                @await Component.InvokeAsync("FormatNumber", manga.ViewCount)
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <!-- end card -->
                        }
                    }
                </div>
            </div>
        </div>
        <!-- end content tabs -->
        <div class="col-12">
            <a href="/tim-truyen" class="section__btn">Xem Thêm</a>
        </div>
    </div>
</section>
<!-- end content -->

