                        <a href="#">
                            <img src="~/lib/img/google-play-badge.png" alt="">
                        </a>
                    </li>
                </ul>
            </div>
            <!-- end footer list -->

            <!-- footer list -->
            <div class="col-6 col-sm-4 col-md-3">
                <h6 class="footer__title">Resources</h6>
                <ul class="footer__list">
                    <li>
                        <a href="#">About Us</a>
                    </li>
                    <li>
