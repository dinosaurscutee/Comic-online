@page
@model MangaOnline.Pages.Manage.addnewmangaModel
@{
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">

    <section class="content" style="background-color : #212529">
        <div class="container" style="padding-top: 100px;">
            <div class="row">
                <div class="col-4">
                    <h2 class="content__title">Create new story</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <form method="post" action="#" c>
                <div>
                    <label style="font-size:22px; color:white;" for="author">Author:</label>
                    <select class="custom-select custom-select-lg mb-3">
                        @foreach (var author in Model.authors)
                        {
                            <option value="@author.Id">@author.Name</option>
                        }
                    </select>
                </div>

                <div>
                    <label style="font-size:22px; color:white;" for="category">Category:</label>

                    <select class="custom-select custom-select-lg mb-3">
                        @foreach (var category in Model.categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <div>
                    <label style="font-size:22px; color:white;" for="title">Title:</label>
                    <input type="text" id="title" name="title" asp-for="title" class="form-control" />
                </div>

                <div>
                    <label style="font-size:22px; color:white;" for="description">Description:</label>
                    <textarea id="description" name="description" asp-for="description" class="form-control"></textarea>
                </div>

                <button type="submit" class="btn btn-primary my-1">Submit</button>
            </form>            
        </div>        
    </section>

}
